<div class="hotkeys-container {% if request.session.show_hotkeys is True %} open {% else %} closed {% endif %}">

    <div class="hotkeys__item">
        <i>Shift</i> Show hotkeys menu
    </div>
    <div class="hotkeys__item">
        <i>Alt + T</i> Show translates
    </div>
    <div class="hotkeys__item">
        <i>Alt + O</i> Show original phrases
    </div>
    <div class="hotkeys__item">
        <i>Tab</i> Next element
    </div>
</div>